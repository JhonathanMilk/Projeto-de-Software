public class EmpAssalariado extends Empregados{
    private double salario;
    private boolean comissioned = false;

    public EmpAssalariado() {
        
    }

    public EmpAssalariado(double salario, String nome, String endereco, String dataNascimento, int id, String tipoEmp, boolean valueSindicato) {
        super(nome, endereco, dataNascimento, id, tipoEmp, valueSindicato);
        this.salario = salario;        
    }

    public double getSalario() {
        return salario;
    }

    public void setSalario(double salario) {
        this.salario = salario;
    }

    public boolean isComissioned() {
        return comissioned;
    }

    public void setComissioned(boolean comissioned) {
        this.comissioned = comissioned;
    }
    
    
    public void addAssalariado(double salario){       
        this.salario = salario;
    }
    
    
    @Override
    public String toString(){
        System.out.println(super.toString());
        return "salario: "+salario+"\nComissionado: "+comissioned+"\n";
    }
    
    public void efetuarPagamento (ArrayList<Empregados> empregados, int id){
        
    }
    
    public void printarEmpregados (EmpAssalariado [] assalariado){
          
    }    
}
