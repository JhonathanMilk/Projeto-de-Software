package FolhaDePagamento;

import java.util.ArrayList;

/**
 *
 * @author jhonathanmilk
 */
public class EmpHorista extends Empregados{
    private double horasTrabalhadas;
    private double salario;
    private double horasExtras;

    public EmpHorista() {
    }

    public EmpHorista(double horasTrabalhadas, String nome, String endereco, String dataNascimento, int id, String tipoEmp, boolean valueSindicato) {
        super(nome, endereco, dataNascimento, id, tipoEmp, valueSindicato);
        this.horasTrabalhadas = horasTrabalhadas;
        this.salario = 0;
        this.horasExtras = 0;
    }

    public double getHorasTrabalhadas() {
        return horasTrabalhadas;
    }

    public void setHorasTrabalhadas(double horasTrabalhadas) {
        this.horasTrabalhadas = horasTrabalhadas;
    }
    
    public double getSalario() {
        return salario;
    }

    public void setSalario(double salario) {
        this.salario = salario;
    }
    
    public void submeterCartao (ArrayList<Empregados> empregados, double horasTrabalhadas, int id){
        for(Empregados perc : empregados){
            if (perc.getId() == id && perc.getTipoEmp().equals("Horista")){
                EmpHorista empHorista = (EmpHorista) perc;
                
                if (horasTrabalhadas <= 8.0){
                    empHorista.horasTrabalhadas += horasTrabalhadas;
                    empHorista.salario += 10*horasTrabalhadas;  //pagando 10 reais por hora trabalhada;
                }
                else{
                    double horasExtras = horasTrabalhadas - 8;  //calculo horas extras
                    empHorista.horasTrabalhadas += horasTrabalhadas;
                    empHorista.horasExtras += horasExtras;
                    empHorista.salario += (10*8)+(horasExtras*10*1.5);  //somando horas trabalhadas + taxa de horas extra;
                }
                System.out.println("Cartão submetido com sucesso");
                return;
            }
        }
        System.out.println("id não encontrado ou vocẽ não é um empregado horista");
    }
    

    public void efetuarPagamento (ArrayList<Empregados> empregados, int id){
        
    }
    

    @Override
    public String toString(){
        System.out.println(super.toString());
        return "Horas trabalhadas: "+horasTrabalhadas+"\nHoras extras: "+horasExtras+"\nSalario recorrente: "+salario+"\n";
    }
        
}
